<% if @favorite %>
  $("#favorite_row_star a").attr("href","<%= remove_favorite_user_favorite_question_path(question_id: @question.id, id: @favorite_question.id, user_id: current_user.id) %>")
  $("#favorite_row_star i").removeClass("fa-star-o").addClass("fa-star star_active")
  $("#favorite_row_count").text("<%=@question.favorite_count%>")
  $("#favorite_row_star a").attr("title", "Remover essa pergunta como favorita.").tooltip('fixTitle').tooltip('show');
<% end %>
