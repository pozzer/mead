%li
  .list-timeline-time= get_time_ago(activity.created_at)
  %i.si.si-like.list-timeline-icon.bg-success
  .list-timeline-content
    %p
      %b= link_to activity.owner.full_name, profile_path(activity.owner.profile)
      escolheu a melhor
      %b= link_to "resposta", question_path(activity.trackable) +"#Answer_#{activity.parameters[:answer_id]}"
      a sua
      %b= link_to "pergunta", question_path(activity.trackable)


