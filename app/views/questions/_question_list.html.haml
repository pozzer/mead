%li
  .row
    .col-lg-1.text-center
      .row.push-10-t
        .row
          = question.votes_count
        .row
          %b Votos
      .row.push-10-t
        .row
          %i.fa.fa-check.best-answer-icon-size{ class: (question.have_best_answer? ? "best-answer-icon-color" : "")}
        .row
          = question.answers.size
        .row
          %b Respostas
    .col-lg-11
      .col-lg-12
        %h4= link_to question.title, question
        .font-s13.text-muted
          = truncate(question.content.html_safe, :length => 230, :omission => "" , :escape => false)
      .col-lg-9.col-sm-7.col-xm-12
        = render partial: "shared/tag_list", locals: {tags: question.tags}
      .col-lg-3.col-sm-5.col-xm-12
        = render partial: "shared/block_profile", locals: {title: "Perguntada a  #{time_ago_in_words(question.created_at)}", user: question.user}
