= render "nav"
= simple_form_for(@question) do |f|
  = f.error_notification
  .row
    .card-panel
      .row
        .input-field.col.s12.m12.l12
          = f.input :title
      .row
        .input-field.col.s12.m12.l12
          = f.input :content, :as => :ckeditor, :label=>false, :input_html => { :ckeditor => {:toolbar => 'mini'} }
          =# f.input :content, as: :text, input_html: { class: 'materialize-textarea' }
      .row

      = f.submit "Publicar sua pergunta", class: 'btn'
