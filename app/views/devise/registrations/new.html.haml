.register-box
  .register-logo
    =render "shared/logo"
  .register-box-body
    %p.login-box-msg Register a new membership
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      .form-group.has-feedback
        = f.input :name, required: true, label: false, input_html: { class: 'form-control', placeholder: "Full Name", autofocus: true,  type: "text" }
        %span.glyphicon.glyphicon-user.form-control-feedback
      .form-group.has-feedback
        = f.input :email, required: true, label: false, input_html: { class: 'form-control', placeholder: "Email", autofocus: true,  type: "email" }
        %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = f.input :password, required: true, label: false, input_html: { class: 'form-control', placeholder: "Password", autofocus: true,  type: "password" }, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .form-group.has-feedback
        = f.input :password_confirmation, required: true, label: false, input_html: { class: 'form-control', placeholder: "Retype Password", autofocus: true,  type: "password" }, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
        %span.glyphicon.glyphicon-log-in.form-control-feedback
      .row
        .col-xs-8
        .col-xs-4
          = f.button :submit, "Register",  class: 'btn btn-primary btn-block btn-flat'
      = render "devise/shared/links"

