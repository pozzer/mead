.bg-white.pulldown
  .content.content-boxed.overflow-hidden
    .row
      .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
        .push-30-t.push-20.animated.fadeIn
          = render partial:"devise/shared/heading", locals: {title: "Cadastra-se"}
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :vertical_form_devise, html: { class: "form-horizontal push-50-t push-50" }) do |f|
          = f.simple_fields_for :profile  do |p|
            = p.input :first_name
            = p.input :birth_date, as: :string
          = f.input :email, type: "email"
          = f.input :password, type: "password"
          = f.input :password_confirmation, type: "password"
          .form-group
            .col-xs-7.col-sm-8
              = f.input :terms, as: :boolean, wrapper: :horizontal_boolean_devise
            .col-xs-5.col-sm-4
              .font-s13.text-right.push-5-t
                %a{"data-target" => "#modal-terms", "data-toggle" => "modal", :href => "#"} Ver Termos
          .form-group
            .col-xs-12.col-sm-6.col-sm-offset-3
              = f.submit class: 'btn btn-sm btn-block btn-success'
        = render "devise/shared/links", locals: {}
= render "modal_terms"
