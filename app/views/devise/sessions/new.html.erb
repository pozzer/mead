<div class="bg-white pulldown">
  <div class="content content-boxed overflow-hidden">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <div class="push-30-t push-50 animated fadeIn">
        <div class="text-center">
          <i class="fa fa-2x fa-circle-o-notch text-primary"></i>
          <p class="text-muted push-15-t">A perfect match for your Mead</p>
        </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :vertical_form_devise, html: { class: "form-horizontal push-50-t push-50" }) do |f| %>
              <%= devise_error_messages! %>
              <%= f.input :email, type: "email" %>
              <%= f.input :password, type: "password" %>

              <div class="form-group">
                <div class="col-xs-6">
                  <label class="css-input switch switch-sm switch-primary">
                    <input type="checkbox" id="login-remember-me" name="login-remember-me"><span></span> Remember Me?
                  </label>
                </div>
                <div class="col-xs-6">
                  <div class="font-s13 text-right push-5-t">
                    <%= link_to (content_tag(:i, "", class: "fa fa-lock") + "Esqueci minha senha").html_safe, new_password_path(resource_name) %>
                  </div>
                </div>
              </div>

              <%= f.input :remember_me, as: :boolean, wrapper: :horizontal_boolean_devise %>

              <div class="form-group push-30-t">
                <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                  <button class="btn btn-sm btn-block btn-primary" type="submit">Log in</button>
                </div>
              </div>
              <%= render "devise/shared/links", locals: {} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

