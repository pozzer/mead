.side-content
	%ul.nav-main
		%li
			= link_to (content_tag(:i, "", class: "si si-home") + content_tag(:span, "Home", class: "sidebar-mini-hide #{submenu_active?('HomepagesController#index')}")).html_safe, homepages_path
