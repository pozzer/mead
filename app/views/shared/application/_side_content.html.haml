			%li
				= link_to (content_tag(:i, "", class: "si si-key") + content_tag(:span, "Logar", class: "sidebar-mini-hide")).html_safe, new_user_session_path
		- else
			%li.nav-main-heading
				%span.sidebar-mini-hide Aplicação
			%li
				%a.nav-submenu{"data-toggle" => "nav-submenu", :href => "#"}
					%i.si.si-layers
					%span.sidebar-mini-hide Perfil
				%ul
					%li
						= link_to "Ver Perfil", profile_path(current_user.profile), class: "#{submenu_active?('ProfilesController#show')} "
					%li
						= link_to "Editar Perfil", edit_profile_path(current_user.profile), class: "#{submenu_active?('ProfilesController#edit')} "
			%li
				%a.nav-submenu{"data-toggle" => "nav-submenu", :href => "#"}
					%i.si.si-layers
					%span.sidebar-mini-hide Perguntas
				%ul
					%li
						= link_to "Perguntas", questions_path, class: "#{submenu_active?('QuestionsController#index')} "
					%li
						= link_to "Minhas Perguntas Favoritas", user_favorite_questions_path(current_user), class: "#{submenu_active?('FavoriteQuestionsController#index')}"
					%li
						= link_to "Faça uma pergunta", new_question_path, class: "#{submenu_active?('QuestionsController#new')} "
			%li
				%a.nav-submenu{"data-toggle" => "nav-submenu", :href => "#"}
					%i.si.si-layers
					%span.sidebar-mini-hide Adega
				%ul
					%li
						= link_to "Minha adega", user_bottles_path(current_user), class: "#{submenu_active?('BottlesController#index')}"
					%li
						= link_to "Nova Garrafa ", new_user_bottle_path(current_user), class: "#{submenu_active?('BottlesController#new')}"
			%li
				%a.nav-submenu{"data-toggle" => "nav-submenu", :href => "#"}
					%i.si.si-layers
					%span.sidebar-mini-hide Trocas
				%ul
					%li
						= link_to "Minhas trocas", trades_path(current_user), class: "#{submenu_active?('TradesController#index')}"
