%button.btn.btn-block.btn-info.btn-default{"data-target" => "#modal-popout", "data-toggle" => "modal", :type => "button"}= btn_name
#modal-popout.modal.fade{"aria-hidden" => "true", :role => "dialog", :style => "display: none;", :tabindex => "-1"}
  .modal-dialog.modal-dialog-popout
    .modal-content
      .block.block-themed.block-transparent.remove-margin-b
        .block-header.bg-primary-dark
          %ul.block-options
            %li
              %button{"data-dismiss" => "modal", :type => "button"}
                %i.si.si-close
          %h3.block-title= btn_name
        .block-content
          .js-rating{"data-score" => "3", "data-star-off" => "fa fa-fw fa-2x fa-star text-gray", "data-star-on" => "fa fa-fw fa-2x fa-star text-warning", :style => "cursor: pointer;"}
            %i.fa.fa-fw.fa-2x.fa-star.text-warning{"data-alt" => "1", :title => "Bad"}>
            \ 
            %i.fa.fa-fw.fa-2x.fa-star.text-gray{"data-alt" => "2", :title => "Poor"}>
            \ 
            %i.fa.fa-fw.fa-2x.fa-star.text-gray{"data-alt" => "3", :title => "Regular"}>
            \ 
            %i.fa.fa-fw.fa-2x.fa-star.text-gray{"data-alt" => "4", :title => "Good"}>
            \ 
            %i.fa.fa-fw.fa-2x.fa-star.text-gray{"data-alt" => "5", :title => "Gorgeous"}
            %input{:name => "score", :type => "hidden", :value => "3"}/
      .modal-footer
        %button.btn.btn-sm.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-sm.btn-primary{"data-dismiss" => "modal", :type => "button"}
          %i.fa.fa-check
          Avaliar!
