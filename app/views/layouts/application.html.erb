<html>
	<%= render "layouts/html_head"%>
	<body data-action="<%= controller.action_name %>" data-controller="<%= controller.controller_name %>">
		<!-- Side Overlay-->
		<%= render "shared/application/aside" %>
		<!-- Sidebar -->
		<%= render "shared/application/sidebar" %>
		<!-- END Sidebar -->
		<!-- Header -->
		<%= render "shared/application/header" %>
		<!-- END Header -->
		<!-- Main Container -->
  	<main id="main-container">
      <%= yield %>
    </main>
    <!-- END Main Container -->
		<!-- Footer -->
    <%= render "shared/application/footer" %>
