= simple_form_for(@profile, wrapper: :vertical_form_devise) do |f|
  = f.error_notification
  .block
    %ul.nav.nav-tabs.nav-justified.push-20{"data-toggle" => "tabs"}
      %li.active
        %a{:href => "#tab-profile-personal"}
          %i.fa.fa-fw.fa-pencil
          Pessoal
      %li
        %a{:href => "#tab-profile-privacy"}
          %i.fa.fa-fw.fa-map-marker
          Endereço
      %li
        %a{:href => "#tab-profile-password"}
          %i.fa.fa-fw.fa-asterisk
          Password
    .block-content.tab-content
      #tab-profile-personal.tab-pane.fade.active.in
        .row.items-push
          .col-sm-6.col-sm-offset-3.form-horizontal
            .col-xs-6
              = f.simple_fields_for :pictures, @profile.pictures.new do |a|
                .col-xs-12.fileinput.fileinput-new{"data-provides" => "fileinput", :style=>"text-align:center;"}
                  .text-center
                    %label Perfil
                  .push.animated.fadeInDown.img-avatar.fileinput-preview.thumbnail{"data-trigger" => "fileinput", :style => "width: 100px; height: 100px; border:none;"}
                    = image_tag @profile.avatar_url, class: "img-avatar img-avatar96 img-avatar-thumb"
                  %div
                    %span.btn.btn-default.btn-file.hidden
                      = a.input :picture, as: :file
                      = a.input :picture_type, :as => :hidden, :input_html => { :value => "avatar" }
                    %a.hidden.btn.btn-xs.btn-default.fileinput-exists{"data-dismiss" => "fileinput", :href => "#"} remover
            .col-xs-6
              = f.simple_fields_for :pictures, @profile.pictures.new do |a|
                .col-xs-12.fileinput.fileinput-new{"data-provides" => "fileinput", :style=>"text-align:center;"}
                  .text-center
                    %label Fundo
                  .push.animated.fadeInDown.img-avatar.fileinput-preview.thumbnail{"data-trigger" => "fileinput", :style => "width: 100px; height: 100px; border:none;"}
                    = image_tag @profile.cover_url, class: "img-avatar img-avatar96 img-avatar-thumb"
                  %div
                    %span.btn.btn-default.btn-file.hidden
                      = a.input :picture, as: :file
                      = a.input :picture_type, :as => :hidden, :input_html => { :value => "cover" }
                    %a.hidden.btn.btn-xs.btn-default.fileinput-exists{"data-dismiss" => "fileinput", :href => "#"} remover
            .col-xs-12.col-md-6
              = f.input :first_name
            .col-xs-12.col-md-6
              = f.input :last_name
            .col-xs-12
              = f.input :birth_date
            .col-xs-12
              = f.input :about, as: :text
            .col-xs-12
              = f.input :organization_name
            .col-xs-12

      #tab-profile-password.tab-pane.fade
        .row.items-push
          .col-sm-6.col-sm-offset-3.form-horizontal
            %form.form-horizontal.push-10-t.push-10{:action => "base_forms_premade.php", :method => "post", :onsubmit => "return false;"}
              .form-group
                .col-xs-12
                  .form-material.input-group.floating
                    %input#register6-password.form-control{:name => "register6-password", :type => "password"}/
                    %label{:for => "register6-password"} Senha Atual
                    %span.input-group-addon
                      %i.fa.fa-asterisk
              .form-group
                .col-xs-12
                  .form-material.input-group.floating
                    %input#register6-password2.form-control{:name => "register6-password2", :type => "password"}/
                    %label{:for => "register6-password2"} Nova Senha
                    %span.input-group-addon
                      %i.fa.fa-asterisk
              .form-group
                .col-xs-12
                  .form-material.input-group.floating
                    %input#register6-password2.form-control{:name => "register6-password2", :type => "password"}/
                    %label{:for => "register6-password2"} Confirmar Nova Senha
                    %span.input-group-addon
                      %i.fa.fa-asterisk

      #tab-profile-privacy.tab-pane.fade
        .col-sm-6.col-sm-offset-3.form-horizontal
          %form.form-horizontal.push-10-t.push-10{:action => "base_forms_premade.php", :method => "post", :onsubmit => "return false;"}
            .form-group
              .col-xs-6
                .form-material.floating
                  %input#register6-firstname.form-control{:name => "register6-firstname", :type => "text"}/
                  %label{:for => "register6-firstname"} CEP
              .col-xs-6
                .form-material.floating
                  %input#register6-lastname.form-control{:name => "register6-lastname", :type => "text"}/
                  %label{:for => "register6-lastname"} Numero
            .form-group
              .col-xs-6
                .form-material.floating
                  %input#register6-firstname.form-control{:name => "register6-firstname", :type => "text"}/
                  %label{:for => "register6-firstname"} Cidade
              .col-xs-6
                .form-material.floating
                  %input#register6-lastname.form-control{:name => "register6-lastname", :type => "text"}/
                  %label{:for => "register6-lastname"} Estado
            .form-group
              .col-xs-12
                .form-material.input-group.floating
                  %input#register6-email.form-control{:name => "register6-email", :type => "email"}/
                  %label{:for => "register6-email"} Endereço
                  %span.input-group-addon
                    %i.fa.fa-envelope-o
    .block-content.block-content-full.bg-gray-lighter.text-center
      %button.btn.btn-sm.btn-primary{:type => "submit"}
        %i.fa.fa-check.push-5-r
        Salvar as alterações
      %button.btn.btn-sm.btn-warning{:type => "reset"}
        %i.fa.fa-refresh.push-5-r
        Resetar
